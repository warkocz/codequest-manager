@import "common/mixins";

.index {
  background-image: url(<%= asset_path('2.jpg') %>);

  .logo {
    background-image: url(<%= asset_path('cq-logo.png') %>);
    background-repeat: no-repeat;
    background-size: cover;
    display: inline-block;
    height: 300px;
    width: 294px;
    margin-bottom: 60px;
  }

  .line {
    background-image: url(<%= asset_path('line.png') %>);
    background-repeat: no-repeat;
    background-position: center;
    height: 10px;
    width: 1100px;
    margin: 0 auto 60px auto;
  }

  h2 {
    font-size: 40px;
    padding-bottom: 40px;
  }

  span {
    font-size: 22px;
    font-family: $lato-italic;
  }
}

